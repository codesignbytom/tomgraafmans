---
const { tagTitle } = Astro.props;
const colorMode = "dark";
---

<a
  class=`flex items-center justify-center px-3 py-1 text-sm capitalize transition-colors border rounded-sm whitespace-nowrap hover:border-transparent ${colorMode === "dark" ? "border-white/30 text-white/75 hover:bg-white hover:text-black" : "hover:bg-black hover:text-white border-black/30 text-black/75"}`
  href={`/category/${tagTitle}`}
>
  {tagTitle}
</a>
