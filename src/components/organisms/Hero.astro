---
const { title, tagline, image, url } = Astro.props;
const imageUrl = image ?? "https://via.placeholder.com/1200x800";
---

<section id="hero">
  <a
    href={url}
    style={`background: linear-gradient(180deg, rgba(0, 0, 0, 0.00) 40%, rgba(0, 0, 0, 0.80) 100%), url('${imageUrl}') no-repeat center/cover;`}
    class="min-h-[70vh] flex items-end py-8"
  >
    <div class="container flex flex-col gap-1 text-white">
      <h3 class="text-h5 font-body">{title ?? "Project title"}</h3>
      <h1 class="text-h2">{tagline ?? "Project tagline"}</h1>
    </div>
  </a>
</section>
