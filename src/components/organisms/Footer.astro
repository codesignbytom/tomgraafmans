---
import Logo from "../atoms/Logo.astro";
import Navigation from "../molecules/Navigation.astro";
import MySocialLink from "../atoms/MySocialLink.astro";

const year = new Date().getFullYear();
---

<footer
  id="footer"
  class=`py-8 md:py-16 xl:py-24 2xl:py-28 text-white bg-black`
>
  <div class="container flex flex-col gap-8 md:gap-10 lg:gap-12 2xl:gap-20">
    <div
      class="flex flex-col md:flex-row md:flex-wrap md:justify-between gap-8"
    >
      <div class="md:flex-1">
        <Logo />
      </div>
      <div class="flex flex-col gap-6 md:flex-1">
        <div
          class=`w-full pb-3 border-b text-caption--xs border-white/10 text-white/50 md:hidden`
        >
          Navigation
        </div>
        <div class="flex md:justify-center">
          <Navigation orientation="horizontal" />
        </div>
      </div>
      <div class="flex flex-col gap-6 md:flex-1">
        <div
          class=`w-full pb-3 border-b text-caption--xs border-white/10 text-white/50 md:hidden`
        >
          My socials
        </div>
        <div
          class="flex flex-wrap items-center gap-4 md:flex-nowrap md:justify-end"
        >
          <MySocialLink
            position="footer"
            platform="linkedin"
            username="in/tomgraafmans"
          />
          <MySocialLink
            position="footer"
            platform="dribbble"
            username="varvino"
          />
          <MySocialLink
            position="footer"
            platform="behance"
            username="tomgraafmans"
          />
          <MySocialLink
            position="footer"
            platform="github"
            username="xarxino"
          />
          <MySocialLink
            position="footer"
            platform="read"
            platformDomain="cv"
            platformIcon="read-cv"
            username="tomgraafmans"
          />
        </div>
      </div>
    </div>
    <div
      class=`flex items-center gap-4 justify-between text-xs text-center md:text-sm text-white/50 md:border-t md:border-white/10 md:pt-4`
    >
      <span>
        © {year} • Tom Graafmans. All rights reserved.
      </span>
      <a
        href="#top"
        class="flex flex-row-reverse items-center justify-center gap-2 md:gap-3 group"
      >
        <i
          class="flex items-center justify-center ph ph-arrow-up border h-8 w-8 rounded-full border-white/50 text-xl group-hover:bg-white group-hover:text-black group-hover:border-transparent transition-colors duration-500 ease-in-out"
        ></i>
        <span
          class="group-hover:text-white transition-colors duration-500 ease-in-out"
          >Scroll to top</span
        >
      </a>
    </div>
  </div>
</footer>
