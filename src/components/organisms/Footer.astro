---
import Logo from "../atoms/Logo.astro";
import Navigation from "../molecules/Navigation.astro";
import MySocialLink from "../atoms/MySocialLink.astro";

const year = new Date().getFullYear();
---

<footer id="footer" class="bg-black text-white py-8">
  <div class="container flex flex-col gap-8">
    <div class="flex flex-col gap-8">
      <Logo />
      <div class="flex flex-col gap-6">
        <div
          class="text-caption--xs pb-3 border-b border-white/30 text-white/50 w-full"
        >
          Navigatiemenu
        </div>
        <Navigation />
      </div>
      <div class="flex flex-col gap-6">
        <div
          class="text-caption--xs pb-3 border-b border-white/30 text-white/50 w-full"
        >
          Mijn socials
        </div>
        <div class="flex flex-wrap gap-4 items-center">
          <MySocialLink platform="linkedin" username="tomgraafmans" />
          <MySocialLink platform="dribbble" username="varvino" />
          <MySocialLink platform="behance" username="tomgraafmans" />
          <MySocialLink platform="github" username="xarxino" />
        </div>
      </div>
    </div>
    <div
      class="flex flex-col items-center text-center gap-4 text-xs md:text-sm text-white/50"
    >
      <p>© {year} — Tom Graafmans. Alle rechten voorbehouden.</p>
      <a href="#" class="underline">Privacybeleid</a>
    </div>
  </div>
</footer>
