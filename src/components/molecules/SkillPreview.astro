---
const { title, description, icon } = Astro.props;
---

<div class="flex flex-col items-start gap-4">
  <div
    class="text-3xl text-white bg-primary-600 h-12 w-12 p-4 flex items-center justify-center rounded-full"
  >
    <i class=`ph ph-${icon} animate-wiggle`></i>
  </div>
  <div class="flex flex-col gap-2">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>
