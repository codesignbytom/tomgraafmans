---
const { size, textBoolean, iconStyle } = Astro.props;
import SocialsLink from "../atoms/SocialsLink.astro";
import { socials } from "../../socials.json";
---

{
  socials.map((social) => (
    <SocialsLink
      key={social.url}
      text={social.text}
      textBoolean={textBoolean}
      icon={social.text.toLowerCase() + "-logo"}
      iconStyle={iconStyle}
      url={social.url}
      external={social.external}
      size={size}
    />
  ))
}
